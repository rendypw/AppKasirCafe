<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/titlePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai, "
                android:textSize="20sp"
                android:fontFamily="verdana"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvnamauser"
                style="@style/titlePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:fontFamily="verdana"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button
            android:id="@+id/btnlogout"
            android:layout_width="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-10dp"
            android:paddingLeft="-20dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_master_home"
            android:drawableTop="@drawable/ic_logout"
            tools:ignore="OnClick" />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            <TextView
                style="@style/titlePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="verdana"
                android:textStyle="bold"
                android:text="Rp "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tvpenghasilan"
                style="@style/titlePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="verdana"
                android:textStyle="bold"
                android:text="0"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <ImageView
                android:layout_width="210dp"
                android:layout_height="115dp"
                android:src="@drawable/img_home"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:gravity="center|bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/bg_putih"
        android:baselineAligned="false"
        android:padding="10dp"
        android:gravity="center|top"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnmakanan"
                    android:layout_centerHorizontal="true"
                    android:text="MAKANAN"
                    android:textColor="@color/colorTitle"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnmakanan"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="125dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_master_home"
                    android:drawableTop="@drawable/icon_makananv"
                    android:indeterminate="false"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnorder"
                    android:layout_centerHorizontal="true"
                    android:text="PESAN"
                    android:textColor="@color/colorTitle"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnorder"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="125dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_master_home"
                    android:drawableTop="@drawable/icon_order"
                    android:indeterminate="false"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnProfil"
                    android:layout_centerHorizontal="true"
                    android:text="PROFIL"
                    android:textColor="@color/colorTitle"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnProfil"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="125dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_master_home"
                    android:drawableTop="@drawable/icon_profil"
                    android:indeterminate="false"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="35dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnMinuman"
                    android:layout_centerHorizontal="true"
                    android:text="MINUMAN"
                    android:textColor="@color/colorTitle"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnMinuman"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="125dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_master_home"
                    android:drawableTop="@drawable/icon_minuman"
                    android:indeterminate="false"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRwyt"
                    android:layout_centerHorizontal="true"
                    android:text="RIWAYAT\nPESANAN"
                    android:gravity="center"
                    android:textColor="@color/colorTitle"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnRwyt"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="125dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_master_home"
                    android:drawableTop="@drawable/icon_riwayat"
                    android:indeterminate="false"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvPengaturan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnSttng"
                    android:layout_centerHorizontal="true"
                    android:text="PENGATURAN"
                    android:textColor="@color/colorTitle"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnSttng"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="125dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_master_home"
                    android:drawableTop="@drawable/icon_admset"
                    android:indeterminate="false"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>